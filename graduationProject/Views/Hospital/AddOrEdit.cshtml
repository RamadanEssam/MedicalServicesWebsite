@model deptHospitalViewModel

@{
    ViewData["Title"] = "Add Or Edit";
    Layout = null;
}
<style>
    .modal-dialog {
        max-width: 840px;
    }

    .modal-content {
        min-width: 100%;
        padding-left: 25px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Hos_Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Hos_Id" class="form-control" />
                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <input type="hidden" asp-for="hos_pic" class="form-control" />

                    <div class="form-group">
                        <label asp-for="Hos_Name" class="control-label"></label>
                        <input asp-for="Hos_Name" class="form-control" />
                        <span asp-validation-for="Hos_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hos_Location" class="control-label"></label>
                        <input asp-for="Hos_Location" class="form-control" />
                        <span asp-validation-for="Hos_Location" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Hos_Phone" class="control-label"></label>
                                <input asp-for="Hos_Phone" class="form-control" />
                                <span asp-validation-for="Hos_Phone" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Departments" class="control-label "></label>
                                <select asp-for="Dept_Id" class="form-control" asp-items="@(new SelectList(Model.Departments, "Dept_Id", "Dept_Name"))">
                                    <option value="" disabled selected>Choose your country</option>
                                </select>
                                <span asp-validation-for="Dept_Id" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Hos_Incubators" class="control-label"></label>
                                <input asp-for="Hos_Incubators" class="form-control" />
                                <span asp-validation-for="Hos_Incubators" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DayPrice" class="control-label"></label>
                                <input asp-for="DayPrice" class="form-control" />
                                <span asp-validation-for="DayPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="File" class="w-100">اختر صورة</label>
                        @if (Model.hos_pic != null)
                        {
                            <img style="width: 230px; height: 195px" class="img-thumbnail profile-Image" id="profileImg" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(Model.hos_pic))"/>
                        }
                        else
                        {
                            <img style="width: 230px; height: 195px" class="img-thumbnail profile-Image" id="profileImg" alt="profile" src="~/images/25-258285_free-icons-png-search-user-icon-png.png" />
                        }
                        <div class="custom-file mt-2">
                            <input name="File" type="file"
                                   accept="image/*"
                                   asp-for="hos_pic"
                                   class="custom-file-input"
                                   onchange="document.getElementById('profileImg').src = window.URL.createObjectURL(this.files[0])" />
                            <label class="custom-file-label" asp-for="hos_pic">اختار صورة</label>
                            <span asp-validation-for="hos_pic" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />-->
}