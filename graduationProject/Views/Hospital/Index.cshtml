@model IEnumerable<graduationProject.Models.Hospital>
@{
    ViewData["Title"] = "Hospitals";
    ViewBag.hospitallist = "active";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable Example
                    </div>
                    <div class="card-body">
                        <div class="create-edit text-end">
                            <a onclick="showInPopup('@Url.Action("AddOrEdit", "Hospital", null, Context.Request.Scheme)', 'Create New')" class="btn btn-primary" id="button1"><i class="far fa-plus-square"></i>Create New</a>
                        </div>
                        <div class="alert alert-success alert-dismissible fade show mt-4 d-none" id="alert" role="alert">
                            <strong>Success</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <table id="datatablesSimple" class="table table-striped mt-4">
                            <thead>
                                <tr class="bg-primary text-white">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hos_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Department.Dept_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hos_Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hos_Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Hos_Incubators)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DayPrice)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.hos_pic)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tfoot>

                            </tfoot>
                            <tbody id="view-all">
                                @Html.Partial("_ViewAllHospital", Model)
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}