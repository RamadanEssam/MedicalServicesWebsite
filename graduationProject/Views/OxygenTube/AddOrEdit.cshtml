@model graduationProject.ViewModels.deptTubeViewModel
@{
    ViewData["Title"] = "Add Or Edit";
    Layout = null;
}
<style>
    .modal-dialog {
        max-width: 840px;
    }

    .modal-content {
        min-width: 100%;
        padding-left: 25px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.OxgnId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OxgnId" class="form-control" />
                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <div class="form-group">
                        <label asp-for="OxgnType" class="control-label"></label>
                        <input asp-for="OxgnType" class="form-control" />
                        <span asp-validation-for="OxgnType" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OxgnAmount" class="control-label"></label>
                                <input asp-for="OxgnAmount" class="form-control" />
                                <span asp-validation-for="OxgnAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OxgnCost" class="control-label"></label>
                                <input asp-for="OxgnCost" class="form-control" />
                                <span asp-validation-for="OxgnCost" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OxgnLocation" class="control-label"></label>
                                <input asp-for="OxgnLocation" class="form-control" />
                                <span asp-validation-for="OxgnLocation" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OxgnDescription" class="control-label"></label>
                                <input asp-for="OxgnDescription" class="form-control" />
                                <span asp-validation-for="OxgnDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Departments" class="control-label "></label>
                                <select asp-for="Dept_Id" class="form-control" asp-items="@(new SelectList(Model.Departments, "Dept_Id", "Dept_Name"))">
                                    <option value="" disabled selected>Choose your country</option>
                                </select>
                                <span asp-validation-for="Dept_Id" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OxgnPhone" class="control-label"></label>
                                <input asp-for="OxgnPhone" class="form-control" />
                                <span asp-validation-for="OxgnPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />-->
}