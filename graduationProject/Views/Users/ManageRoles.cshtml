@model UserRolesViewModel
@{
    ViewData["Title"] = "Manage Roles";
    Layout = null;

}
<form asp-action="ManageRoles" asp-route-id="@Model.UserId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
    <div class="card mt-4">
        <div class="card-header">
            <h1>Manage Roles</h1>
            <h3>@Model.UserName</h3>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId"/>
            <!--عشان هنا الاحسن ان استخدم فور عشان محتاج اعمل iterator-->
            @for(int i=0; i< Model.Roles.Count; i++ )
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

