@model IEnumerable<UserViewModel>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@string.Join(" , ", item.Roles.ToList())</td>
        <td class="text-center" >
            <a onclick="showInPopup('@Url.Action("ManageRoles","Users",new {id=item.Id},Context.Request.Scheme)','Edit')" class="btn btn-info text-white"><i class="fas fa-tasks"></i>Roles</a>
            <a onclick="showInPopup('@Url.Action("EditProfile","Users",new {id=item.Id},Context.Request.Scheme)','Edit')" class="btn btn-info text-white"><i class="fas fa-user-edit"></i></a>
            <a href="javascript:;" class="btn btn-danger js-delete" data-id="@item.Id"><i class="far fa-trash-alt"></i></a>
        </td>
    </tr>
}